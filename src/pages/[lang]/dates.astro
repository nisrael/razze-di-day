---
import { LOCALES } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { useTranslations } from "../../utils/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<BaseLayout
  lang={lang}
  title={`${t.dates.title || "Termine"} | Digital Independence Day`}
  description={t.dates.description || "Alle Termine für digitale Unabhängigkeit"}
>
  <section
    class="relative bg-gradient-to-br from-primary-600 to-accent-600 text-white py-16 overflow-hidden"
  >
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-display font-bold mb-4">
        {t.dates.title || "Termine"}
      </h1>
      <p class="text-xl text-primary-100 mb-8">
        {t.dates.description || "Alle Veranstaltungen und wichtigen Daten"}
      </p>
      <a
        href="https://termine.di.day"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 bg-white text-primary-600 rounded-lg font-semibold hover:bg-primary-50 transition-colors shadow-lg"
      >
        {t.dates.cta || "Zur Terminübersicht →"}
      </a>
    </div>
  </section>

  <div class="container mx-auto px-4 py-16 max-w-4xl">
    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8">
      <h2 class="text-2xl font-display font-bold mb-4">
        {t.dates.info_title || "Digitale Unabhängigkeit erleben"}
      </h2>
      <p class="text-gray-700 dark:text-gray-300 mb-4">
        {t.dates.info_text || "Entdecke alle Termine, Veranstaltungen und wichtigen Daten rund um den Digital Independence Day auf unserer Terminseite."}
      </p>
    </div>
  </div>
</BaseLayout>
